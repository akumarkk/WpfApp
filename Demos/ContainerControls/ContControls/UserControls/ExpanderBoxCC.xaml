<UserControl x:Class="ContControls.CustomControls.ExpanderBoxCC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContControls.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander Background="Silver" Height="60">
        <Expander.Header>
            <Label Content="Smiley Colors(Expand(default)/Collapse): " />
        </Expander.Header>
        <StackPanel Orientation="Horizontal" Margin="1,1,1,1">
            <RadioButton Content="Blue"/>
            <RadioButton Content="Green" Padding="2" />
            <RadioButton Content="Peach" />
        </StackPanel>
    </Expander>
</UserControl>
