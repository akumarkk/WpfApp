<UserControl x:Class="ContControls.UserControls.ScrollBarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContControls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        
            <TextBlock x:Name="textBoxScroll"> You have scrolled </TextBlock>
            <ScrollBar Minimum="1" Maximum="100" Orientation="Horizontal" Scroll="ScrollBar_Scroll" >
                
                
        </ScrollBar>
        <TextBlock x:Name="slBar"></TextBlock>
        <Slider Minimum="0" Maximum="100" SmallChange="1" LargeChange="5" ValueChanged="Slider_ValueChanged" Background="Teal">
        </Slider>

        <ProgressBar Minimum="0" Maximum="100" Height="10" Margin="5 5 5 5" Value="8">
        </ProgressBar>

        <ProgressBar IsIndeterminate="True" Minimum="0" Maximum="100" Height="10">
        </ProgressBar>
    </StackPanel>
</UserControl>
