<UserControl x:Class="ContControls.CustomControls.ToolBarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContControls.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ToolBarTray>
        <ToolBar Header="Tools One">
            <Button Background="Blue" Content="1"/>
            <Button Background="Blue" Content="2"/>
            <Button Background="Blue" Content="3"/>
        </ToolBar>

        <ToolBar Header="Tools One" Band="1">
            <Button Background="#FFFF2F00" Content="1"/>
            <Button Background="#FFFF5F00" Content="2"/>
            <Button Background="#FFFF2700" Content="3"/>
        </ToolBar>
        <ToolBar Header="Tools One" Band="1">
            <Button Background="#FF00D0FF" Content="1"/>
            <Button Background="#FF00D8FF" Content="2"/>
            <Button Background="#FF00D8FF" Content="3"/>
        </ToolBar>
    </ToolBarTray>
</UserControl>
