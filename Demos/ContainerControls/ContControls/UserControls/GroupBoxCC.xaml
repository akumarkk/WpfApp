<UserControl x:Class="ContControls.CustomControls.GroupBoxCC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContControls.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Background="Aqua" Height="78" BorderThickness="0" Margin="0 0 0 0" Padding="0 0 0 0">
        <GroupBox.Header >
            <Label Content="Smiley Colors: " Height="38"/>
        </GroupBox.Header>
        <StackPanel Orientation="Horizontal" Height="40">
            <RadioButton Content="Blue"/>
            <RadioButton Content="Green" />
            <RadioButton Content="Peach" />
        </StackPanel>
    </GroupBox>
</UserControl>
